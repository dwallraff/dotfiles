#!/bin/bash

IFS=$'\n' &&
for i in $(ls $HOME/code); do
    cd $HOME/code/$i;
    if [[ -d ".git" ]];
    then
        printf "Updating $i\n";
        cd $HOME/code/$i; git pull;
        printf "\n";
    else
        printf "Skipping $i...\n\n";
    fi
done && printf "Updating homebrew\n" && brew update && brew upgrade --all