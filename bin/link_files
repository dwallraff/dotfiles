#!/bin/bash

## Link dotfiles

# Link files
ln -sf ~/code/dotfiles/dotfiles/screenrc ~/.screenrc
ln -sf ~/code/dotfiles/dotfiles/vimrc ~/.vimrc
ln -sf ~/code/dotfiles/dotfiles/Package\ Control.sublime-settings ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Package\ Control.sublime-settings
ln -sf ~/code/dotfiles/dotfiles/Preferences.sublime-settings ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Preferences.sublime-settings
ln -sf ~/code/dotfiles/dotfiles/SFTP.sublime-settings ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/SFTP.sublime-settings
ln -sf /Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl /usr/local/bin/subl
ln -sf ~/code/dotfiles/dotfiles/bashrc ~/.bashrc
ln -sf ~/code/dotfiles/dotfiles/gitconfig ~/.gitconfig
ln -sf ~/code/dotfiles/dotfiles/ssh_config ~/.ssh/config

# Link scripts
ln -sf ~/code/dotfiles/bin/update-local ~/bin/update-local
